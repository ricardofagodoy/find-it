<?xml version='1.0' encoding='utf-8'?>
<widget id="com.ricardofagodoy.findit" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Find It!</name>
    <description>
        Innovative maze game
    </description>
    <author email="ricardofagodoy@gmail.com" href="http://ricardofagodoy.com">
        Ricardo Godoy
    </author>
    <content src="index.html" />
    <preference name="Orientation" value="portrait" />
    <preference name="SplashScreen" value="screen" />
    <preference name="AutoHideSplashScreen" value="false" />
    <preference name="ShowSplashScreenSpinner" value="false" />
    <preference name="android-build-tool" value="gradle" />
    <preference name="StatusBarOverlaysWebView" value="false" />
    <plugin name="cordova-plugin-admobpro" source="npm" />
    <plugin name="org.apache.cordova.media" />
    <plugin name="cordova-plugin-device" />
    <platform name="android">
        <access origin="*" />
        <icon density="ldpi" src="iconAndroid.png" />
        <icon density="mdpi" src="iconAndroid.png" />
        <icon density="hdpi" src="iconAndroid.png" />
        <icon density="xhdpi" src="iconAndroid.png" />
        <splash density="ldpi" platform="android" src="screen.png" />
        <splash density="mdpi" platform="android" src="screen.png" />
        <splash density="hdpi" platform="android" src="screen.png" />
        <splash density="xhdpi" platform="android" src="screen.png" />
        <splash density="xxhdpi" platform="android" src="screen.png" />
        <allow-intent href="market:*" />
        <preference name="android-minSdkVersion" value="15" />
        <preference name="android-targetSdkVersion" value="19" />
    </platform>
    <platform name="ios">
        <access origin="*" />
        <icon src="iconApple.png" />
        <splash height="480" platform="ios" src="screen.png" width="320" />
        <splash height="960" platform="ios" src="screen.png" width="640" />
        <splash height="1136" platform="ios" src="screen.png" width="640" />
        <splash height="1024" platform="ios" src="screen.png" width="768" />
        <splash height="768" platform="ios" src="screen.png" width="1024" />
        <splash height="2048" platform="ios" src="screen.png" width="1536" />
        <splash height="1536" platform="ios" src="screen.png" width="2048" />
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <engine name="android" spec="~4.1.1" />
    <engine name="ios" spec="~3.9.2" />
</widget>
