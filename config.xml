<?xml version='1.0' encoding='utf-8'?>
<widget id="com.ricardofagodoy.findit" versionCode="500" version="1.0.5" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Find It!</name>
    <description>
        Innovative maze game
    </description>
    <author email="ricardofagodoy@gmail.com" href="http://ricardofagodoy.com">
        Ricardo Godoy
    </author>
    <content src="index.html" />
    <preference name="Orientation" value="portrait" />
    <preference name="AutoHideSplashScreen" value="false" />
    <preference name="ShowSplashScreenSpinner" value="false" />
    <preference name="android-build-tool" value="gradle" />
    <preference name="StatusBarOverlaysWebView" value="false" />
    <plugin name="cordova-plugin-admobpro" source="npm" />
    <plugin name="org.apache.cordova.media" />
    <plugin name="cordova-plugin-device" />
    <platform name="android">
        <access origin="*" />
        <icon density="ldpi" src="icons/iconAndroid.png" />
        <icon density="mdpi" src="icons/iconAndroid.png" />
        <icon density="hdpi" src="icons/iconAndroid.png" />
        <icon density="xhdpi" src="icons/iconAndroid.png" />
        <splash density="ldpi" platform="android" src="splash/screen.png" />
        <splash density="mdpi" platform="android" src="splash/screen.png" />
        <splash density="hdpi" platform="android" src="splash/screen.png" />
        <splash density="xhdpi" platform="android" src="splash/screen.png" />
        <splash density="xxhdpi" platform="android" src="splash/screen.png" />
        <allow-intent href="market:*" />
        <preference name="android-minSdkVersion" value="15" />
        <preference name="android-targetSdkVersion" value="19" />
    </platform>
    <platform name="ios">
        <access origin="*" />
        <icon src="icons/iconApple.png" />
        <icon height="29" platform="ios" src="icons/Icon-29.png" width="29" />
        <icon height="40" platform="ios" src="icons/Icon-40.png" width="40" />
        <icon height="57" platform="ios" src="icons/Icon-57.png" width="57" />
        <icon height="72" platform="ios" src="icons/Icon-72.png" width="72" />
        <icon height="76" platform="ios" src="icons/Icon-76.png" width="76" />
        <icon height="120" platform="ios" src="icons/Icon-120.png" width="120" />
        <icon height="152" platform="ios" src="icons/Icon-152.png" width="152" />
        
        <splash src="splash/Default.png" platform="ios" width="320" height="480" />
        <splash src="splash/Default@2x.png" platform="ios" width="640" height="960" />
        <splash src="splash/Default-568h@2x.png" platform="ios" width="640" height="1136" />
        <splash src="splash/Default-667h@2x.png" platform="ios" width="750" height="1334" />
        <splash src="splash/Default-Portrait-736h@3x.png" platform="ios" width="1242" height="2208" />
        <splash src="splash/Default-Landscape-736h@3x.png" platform="ios" width="2208" height="1242" />
        <splash src="splash/Default-Portrait.png" platform="ios" width="768" height="1024" />
        <splash src="splash/Default-Landscape.png" platform="ios" width="1024" height="768" />
        <splash src="splash/Default-Portrait@2x.png" platform="ios" width="1536" height="2048" />
        <splash src="splash/Default-Landscape@2x.png" platform="ios" width="2048" height="1536" />
        
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <engine name="android" spec="~4.1.1" />
    <engine name="ios" spec="~3.9.2" />
</widget>
