<?xml version='1.0' encoding='utf-8'?>
<widget id="com.ricardofagodoy.findit" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <preference name="loglevel" value="DEBUG" />
    <feature name="Whitelist">
        <param name="android-package" value="org.apache.cordova.whitelist.WhitelistPlugin" />
        <param name="onload" value="true" />
    </feature>
    <feature name="SplashScreen">
        <param name="android-package" value="org.apache.cordova.splashscreen.SplashScreen" />
        <param name="onload" value="true" />
    </feature>
    <feature name="connectivity">
        <param name="android-package" value="com.appfeel.cordova.connectivity.Connectivity" />
    </feature>
    <allow-intent href="market:*" />
    <preference name="android-minSdkVersion" value="15" />
    <preference name="android-targetSdkVersion" value="19" />
    <name>Find It!</name>
    <description>
        Innovative maze game
    </description>
    <author email="ricardofagodoy@gmail.com" href="http://ricardofagodoy.com">
        Ricardo Godoy
    </author>
    <content src="index.html" />
    <icon src="icon.png" />
    <preference name="Orientation" value="portrait" />
    <preference name="SplashScreen" value="icon" />
    <preference name="AutoHideSplashScreen" value="false" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
</widget>
